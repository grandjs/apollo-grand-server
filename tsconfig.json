{
    "compilerOptions": {
    "declaration": true,
    "outDir": "dist",
    "module": "CommonJS",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "target": "ES6",
    "resolveJsonModule": true,
    "strict": false,
    "moduleResolution": "Node",
    "emitDecoratorMetadata": true,
    "rootDir": "src",
    "rootDirs": ["src", "dist"],
    "jsx": "react",
    "baseUrl": "src",
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}
